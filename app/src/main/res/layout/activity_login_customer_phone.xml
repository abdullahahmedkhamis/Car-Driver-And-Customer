<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    android:layout_marginTop="200dp"
    tools:context=".LoginCustomerPhone">


    <EditText
        android:id="@+id/phone_nnumber_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="28dp"
        android:autofillHints=""
        android:background="@color/colorAccent"
        android:drawableStart="@drawable/dd"
        android:drawableLeft="@drawable/dd"
        android:gravity="center_horizontal"
        android:hint="@string/write_phone_number_here"
        android:inputType="number"
        android:padding="8dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/verification_code_input"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/phone_nnumber_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:autofillHints=""
        android:layout_marginTop="40dp"
        android:background="@color/colorAccent"
        android:drawableStart="@drawable/loc"
        android:drawableLeft="@drawable/loc"
        android:gravity="center_horizontal"
        android:hint="@string/write_verification_code_here"
        android:inputType="number"
        android:padding="8dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/send_ver_code_button"
        tools:layout_editor_absoluteX="19dp" />

    <Button
        android:id="@+id/send_ver_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_code_input"
        android:gravity="center_horizontal"
        android:text="Send Verification Code"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/verify_button"
        tools:layout_editor_absoluteX="19dp" />


    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_code_input"
        android:gravity="center_horizontal"
        android:text="Send Verification Code"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/send_ver_code_button"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>